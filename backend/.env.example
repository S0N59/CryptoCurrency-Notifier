# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Admin Panel Authentication
# Set a secure random token for admin panel access
ADMIN_TOKEN=your_secure_admin_token_here

# Price Polling Configuration
# Interval in seconds between price checks (default: 60)
POLL_INTERVAL=60

# Server Configuration
PORT=3001

# Telegram Mini App Configuration
# The URL where your frontend is hosted (must be HTTPS)
WEB_APP_URL=https://your-frontend-url.com
